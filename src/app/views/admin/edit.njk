{% extends "layout.njk" %}

{% block title %}
  <title>FoodFy - Editar</title>
{% endblock title %}

{% block header %}
  <header class="menu--black">
      <nav class="menu container">
          <a href="/" class="button">
              <img src="/img/logo-1.png" alt="Logo">
          </a>
      </nav>
  </header>
{% endblock header %}

{% block content %}
  
<form class="form__create form-js" method="POST" action="">
  <div class="form__acoes">
    <h2 class="form__title">Editando Receita</h2>
    <div class="form__btn">
      <button 
        type="submit" 
        class="btn btn--excluir"
        onclick="editOrDel('/admin/recipes?_method=DELETE')"
      >Excluir</button>

      <button 
        type="submit" 
        class="btn btn--editar" 
        onclick="editOrDel('/admin/recipes?_method=PUT')"
      >Salvar receita</button>
    </div>
  </div>
  <input type="hidden" name="id" value="{{food.id}}">
  {% include 'admin/filds.njk'%}
</form>
{% endblock content%}
