{% extends "layout.njk" %}

{% block title %}
  <title>FoodFy - Nova Receita</title>
{% endblock title %}

{% block header %}
  <header class="menu--black">
      <nav class="menu container">
          <a href="/" class="button">
              <img src="/img/logo-1.png" alt="Logo">
          </a>
      </nav>
  </header>
{% endblock header %}

{% block content %}
    <form method="POST" action="/admin/recipes">
      <div class="form__acoes">
        <h2 class="form__title">Criando receita</h2>
        <button type="submit" class="btn btn--editar">Salvar receita</button>
      </div>
            
      <div class="form__recepe">
          <label for="author_receita" class="form__description">Nome do(a) Autor</label>
          <input 
              type="text" 
              name="author"
              id="author_receita" 
              class="form__input">
      </div>
      <div class="form__recepe">
          <label for="title_receita" class="form__description">Nome da Receita</label>
          <input 
              type="text" 
              name="title" 
              id="title_receita" 
              class="form__input"
          >
      </div>

      <div class="form__recepe">
          <label for="img_receita" class="form__description">Imagem da Receita</label>
          <input 
              type="url" 
              name="image" 
              id="img_receita" 
              class="form__input"
          >
      </div>

      <div class="form__recepe">
          <label for="ingrediente_receita" class="form__description">Ingredientes</label>
          <div class="form__box box-js">
              <input 
                  type="text" 
                  name="ingredients" 
                  class="form__input input__js"
              >

          </div>
          <button type="button" class="btn btn--primare add-input-js">Adicionar novo ingrediente</button>
      </div>

      <div class="form__recepe">
          <label for="preparo_receita" class="form__description">Modo de preparo</label>
          <div class="form__box box-js">
              <input 
                  type="text" 
                  name="preparation"
                  class="form__input input__js"
              >
          </div>
          <button  type="button" class="btn btn--primare add-input-js">Adicionar novo passo</button>
      </div>

      <div class="form__recepe">
          <label for="info_receita" class="form__description">Informações adicionais</label>
          <textarea 
              name="information"
              id="info_receita" 
              cols="30" rows="10" 
              class="form__input"
          ></textarea>
      </div>
    </form>
{% endblock content%}
