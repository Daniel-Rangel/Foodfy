
{% extends "layout.njk" %}

{% block header %}
  <header class="menu--black">
      <nav class="menu container">
          <a href="/admin/recipes" class="button">
            <img src="/img/logo-1.png" alt="Logo">
          </a>
          <ul class="menu__Itens">
            <li class="menu__item"><a href="/admin/recipes" class="button itens--style">Receita</a></li>
            <li class="menu__item"><a href="/admin/chefs" class="button itens--style">Chef</a></li>
          </ul>
      </nav>
  </header>
{% endblock header %}

{% block content %}
      <form methods="POST" action="" class="item_page">
        <h2>Chef: {{Chef.name}}</h2>
        <a href="/admin/chefs/{{Chef.id}}/edit" class="btn btn--editar">Editar receita</a>
      </form>

      <section class="lists lists--page">
          
          <article class="list__item list__item--page">
            <div>
              <img src="{{Chef.avatar_url}}" alt="Chef: {{Chef.name}}" class="list__img list__img--page">
            </div>
            <h1 class="list__title list__title--page">{{Chef.name}}</h1>
            <p class="list__cooker list__cooker--page">4 receitas</p>
          </article>
          
          <section class="list__title list__title--page">
            <h1>Receita</h1>
            <div class="list__recipe">
              
            </div>
          </section>
      </section>
{% endblock content %}