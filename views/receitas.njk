{% extends "layout.njk" %}

{% block content %}
    <main method="post" action="receita" class="revenues">
      <section class="lists">
        {% for food in foods %}
          <article class="list__item list__item-js">
            <div class="list__figure">
              <img src="{{food.image}}" alt="{{food.title}}" class="list__img">
            </div>
            <h1 class="list__title">{{food.title}}</h1>
            <p class="list__cooker">por {{food.author}}</p>
          </article>
        {% endfor %}
      </section>
    </main>
{% endblock content %}
